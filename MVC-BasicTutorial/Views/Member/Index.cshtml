@model IEnumerable<MVC_BasicTutorial.Models.Member>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .redback {
        background-color: yellowgreen;
    }
</style>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('.rowClick').click(function () {
                $('.rowClick').removeClass("redback");
                $(this).addClass("redback");
            });
        });
    </script>
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemberName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberAge)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="rowClick">
            <td>
                @Html.DisplayFor(modelItem => item.MemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberAge)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MemberId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MemberId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MemberId })
            </td>
        </tr>
    }

</table>
